{
  "watch": [
    ".",
    "*.html",
    "*.css",
    "*.js",
    "*.png",
    "*.jpg",
    "*.jpeg",
    "*.gif",
    "*.svg"
  ],
  "ext": "html,css,js,png,jpg,jpeg,gif,svg,json",
  "ignore": [
    "node_modules/",
    ".git/",
    "*.log",
    "package-lock.json",
    "yarn.lock"
  ],
  "delay": "1000",
  "env": {
    "NODE_ENV": "development"
  },
  "verbose": true,
  "restartable": "rs",
  "colours": true,
  "execMap": {
    "js": "node"
  }
} 